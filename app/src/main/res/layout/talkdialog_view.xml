<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/talk"
        android:text="安安安安安安安安安安安安安安安安安安安安 "
        android:textSize="18dp"
        android:padding="5dp"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/talk_retangle"/>

    <ImageView
        android:id="@+id/npc_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/talk"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/boy"/>

    <Button
        android:id="@+id/skip_btn"
        android:layout_width="38dp"
        android:layout_height="25dp"
        android:textColor="#fff"
        android:textSize="12dp"
        android:text="SKIP"
        android:layout_below="@+id/talk"
        android:layout_alignRight="@+id/talk"
        android:background="@drawable/back_btn"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="-10dp"/>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="38dp"
        android:layout_height="25dp"
        android:textColor="#fff"
        android:textSize="12dp"
        android:text="NEXT"
        android:layout_alignBottom="@+id/skip_btn"
        android:layout_marginRight="10dp"
        android:background="@drawable/back_btn"
        android:layout_toLeftOf="@+id/skip_btn"/>

</RelativeLayout>